<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity"
    android:background="@drawable/blackboard">

    <TextView
        android:id="@+id/school_name_main_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/school_name_text"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/school_name_main_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingLeft="5dp"
        android:layout_below="@id/school_name_main_text"
        android:background="@drawable/rounded_transperant"
        android:layout_alignLeft="@+id/school_name_main_text"/>

    <TextView
        android:id="@+id/range_text_main"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/string_range_main"
        android:textColor="@android:color/white"
        android:layout_marginTop="17dp"
        android:paddingLeft="5dp"
        android:layout_below="@id/school_name_main_edit"
        android:layout_alignLeft="@+id/school_name_main_edit" />
    
    <Spinner
        android:id="@+id/range_spinner_main"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/range_text_main"
        android:layout_alignLeft="@+id/school_name_main_edit"
        android:background="@drawable/rounded_transperant"></Spinner>

    <TextView
        android:id="@+id/address_text_main"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_marginTop="17dp"
        android:text="@string/string_address_main"
        android:textColor="@android:color/white"
        android:layout_below="@+id/range_spinner_main"
        android:layout_alignLeft="@+id/school_name_main_edit"/>

    <EditText
        android:id="@+id/address_edit_main"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/address_text_main"
        android:layout_alignLeft="@+id/school_name_main_edit"
        android:background="@drawable/rounded_transperant"/>

    <TextView
        android:id="@+id/rating_text_main"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_marginTop="17dp"
        android:text="@string/string_rating_main"
        android:textColor="@android:color/white"
        android:layout_below="@+id/address_edit_main"
        android:layout_alignLeft="@+id/school_name_main_edit"/>

    <Spinner
        android:id="@+id/rating_spinner_main"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/rating_text_main"
        android:layout_alignLeft="@+id/school_name_main_edit"
        android:background="@drawable/rounded_transperant"></Spinner>

    <TextView
        android:id="@+id/budget_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_marginTop="17dp"
        android:text="@string/budget_string"
        android:textColor="@android:color/white"
        android:layout_below="@+id/rating_spinner_main"
        android:layout_alignLeft="@+id/school_name_main_edit"/>

    <EditText
        android:id="@+id/budget_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/rounded_transperant"
        android:layout_below="@+id/budget_text"
        android:layout_alignLeft="@+id/school_name_main_edit"/>

    <Button
        android:id="@+id/search_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/preshool_search"
        android:layout_below="@+id/budget_edit"
        android:layout_alignLeft="@+id/school_name_main_edit"
        android:background="@drawable/rounded_corners"/>

</RelativeLayout>
