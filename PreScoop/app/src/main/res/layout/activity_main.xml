<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity"
    android:background="@drawable/playground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/preschool_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/range_text_main"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/string_range_main"
        android:layout_marginTop="60dp"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/range_spinner_main"
        android:layout_alignStart="@+id/range_spinner_main" />
    
    <Spinner
        android:id="@+id/range_spinner_main"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/range_text_main"
        android:layout_centerHorizontal="true"
        android:background="#CCffffff"
        android:layout_marginTop="4dp"></Spinner>

    <TextView
        android:id="@+id/address_text_main"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/string_address_main"
        android:layout_below="@+id/range_spinner_main"
        android:layout_alignLeft="@+id/range_spinner_main"
        android:layout_alignStart="@+id/range_spinner_main"
        android:background="#ffffff"
        android:layout_marginTop="14dp"/>

    <EditText
        android:id="@+id/address_edit_main"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_text_main"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/rating_text_main"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/string_rating_main"
        android:layout_below="@+id/address_edit_main"
        android:layout_alignLeft="@+id/address_edit_main"
        android:layout_alignStart="@+id/address_edit_main"
        android:background="#ffffff"
        android:layout_marginTop="14dp"/>

    <Spinner
        android:id="@+id/rating_spinner_main"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating_text_main"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:layout_marginTop="4dp"></Spinner>

    <TextView
        android:id="@+id/budget_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/budget_string"
        android:background="#ffffff"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/rating_spinner_main"
        android:layout_alignLeft="@+id/rating_spinner_main"/>

    <EditText
        android:id="@+id/budget_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_below="@+id/budget_text"
        android:layout_marginTop="4dp"
        android:layout_alignLeft="@+id/budget_text"/>

    <Button
        android:id="@+id/search_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/preshool_search"
        android:layout_below="@+id/budget_edit"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/budget_edit"
        android:layout_alignStart="@+id/budget_edit" />



</RelativeLayout>
