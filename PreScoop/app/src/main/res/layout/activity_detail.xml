<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anthony.prescoop.activity.DetailActivity">

    <ImageView
        android:id="@+id/default_school_image_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/urbanites2"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/default_school_image_detail">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address_text_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address_label_detail"
                android:layout_below="@+id/default_school_image_detail"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:id="@+id/address_info_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="actual add. goes here"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@+id/address_text_detail"
                android:layout_alignRight="@+id/default_school_image_detail"
                android:layout_alignEnd="@+id/default_school_image_detail"
                android:layout_toRightOf="@+id/address_text_detail"
                android:layout_toEndOf="@+id/address_text_detail"
                android:layout_above="@+id/rating_text_detail" />

            <TextView
                android:id="@+id/favorite_school_detail"
                android:layout_width="15dp"
                android:layout_height="15dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rating_text_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating_label_detail"
                android:layout_below="@+id/address_text_detail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="33dp" />

            <ImageView
                android:id="@+id/rating_image_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/one_star"
                android:layout_alignBottom="@+id/rating_text_detail"
                android:layout_alignLeft="@+id/address_info_detail"
                android:layout_alignStart="@+id/address_info_detail" />

            <TextView
                android:id="@+id/description_text_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_label_detail"
                android:layout_marginTop="63dp"/>

            <TextView
                android:id="@+id/description_info_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actual desc goes here"
                android:layout_below="@+id/description_text_detail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/school_photo2_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/urbanites2" />

        </LinearLayout>



    </ScrollView>



</RelativeLayout>
